{
  "openapi":"3.0.0",
  "info":{
     "title":"Teste Backend - TUI",
     "description":"Atividade técnica para a vaga de backend na empresa TUI",
     "contact":{
        "email":"danilomartins.pacs@gmail.com"
     }
  },
  "servers":[
     {
        "url":"http://localhost:8092/api/v1/",
        "description":"API local"
     },
     {
        "url":"http://164.92.209.125:8092/api/v1/",
        "description":"API Prod"
     }
  ],
  "paths":{
     "/address":{
        "post":{
           "summary":"Criação de Endereço",
           "description":"Criação de um novo endereço",
           "tags":[
              "Address"
           ],
           "requestBody":{
              "required":true,
              "content":{
                 "application/json":{
                    "schema":{
                       "type":"object",
                       "properties":{
                          "address":{
                             "type":"array",
                             "items":{
                                "type":"object",
                                "properties":{
                                   "cityName":{
                                      "type":"string",
                                      "example":"MANCHESTER"
                                   },
                                   "cityCode":{
                                      "type":"string",
                                      "example":"MCH"
                                   },
                                   "countryName":{
                                      "type":"string",
                                      "example":"UNITED KINGDON"
                                   },
                                   "regionCode":{
                                      "type":"string",
                                      "example":"EUROP"
                                   }
                                }
                             }
                          }
                       }
                    }
                 }
              }
           },
           "responses":{
              "201":{
                 "description":""
              }
           }
        },
        "get":{
           "summary":"Listagem de Hoteis",
           "description":"Listagem de hoteis sem filtro",
           "tags":[
              "Address"
           ],
           "responses":{
              "200":{
                 "description":"A JSON array of address",
                 "content":{
                    "application/json":{
                       "schema":{
                          "type":"array",
                          "items":{
                             "$ref":"#/components/schemas/Address"
                          }
                       }
                    }
                 }
              }
           }
        }
     },
     "/address/search?term={term}":{
        "get":{
           "tags":[
              "Address"
           ],
           "summary":"Search Address by query",
           "description":"Any term that do you typing will have aggreate to result",
           "parameters":[
              {
                 "name":"term",
                 "in":"query",
                 "type":"string",
                 "example":"LIVERPOOL"
              }
           ],
           "responses":{
              "200":{
                 "description":"Listagem de hoteis",
                 "content":{
                    "application/json":{
                       "schema":{
                          "type":"array",
                          "items":{
                             "$ref":"#/components/schemas/Address"
                          }
                       }
                    }
                 }
              }
           }
        }
     },
     "/address/{id}":{
        "get":{
           "tags":[
              "Address"
           ],
           "summary":"Search Address by id",
           "description":"Any term that do you typing will have aggreate to result",
           "parameters":[
              {
                 "name":"id",
                 "in":"path",
                 "type":"string",
                 "example":"f93f80ab-349a-4ecd-8bea-757b6957d2c6"
              }
           ],
           "responses":{
              "200":{
                 "description":"Listagem de hoteis",
                 "content":{
                    "application/json":{
                       "schema":{
                          "type":"object",
                          "$ref":"#/components/schemas/Address"
                       }
                    }
                 }
              },
              "404":{
                 "description":"Address not found",
                 "content":{
                    "application/json":{
                       "schema":{
                          "type":"object",
                          "$ref":"#/components/schemas/AppError"
                       }
                    }
                 }
              },
              "500":{
                 "description":"Bad URL",
                 "content":{
                    "application/json":{
                       "schema":{
                          "type":"object",
                          "$ref":"#/components/schemas/AppError"
                       }
                    }
                 }
              }
           }
        }
     },
     "/hotel":{
      "post":{
         "summary":"Criação de um Hotel",
         "description":"Criação de um novo hotel",
         "tags":[
            "Hotel"
         ],
         "requestBody":{
            "required":true,
            "content":{
               "application/json":{
                  "schema":{
                     "type":"object",
                     "properties":{
                        "address_id":{
                          "type":"string",
                          "example":"f93f80ab-349a-4ecd-8bea-757b6957d2c6"
                        },
                        "hotel":{
                           "type":"array",
                           "items":{
                              "type":"object",
                              "properties":{
                                 "chainCode":{
                                    "type":"string",
                                    "example":"HX"
                                 },
                                 "iataCode":{
                                    "type":"string",
                                    "example":"LPL"
                                 },
                                 "name":{
                                    "type":"string",
                                    "example":"PREMIER INN LIVERPOOL AIRPORT"
                                 }
                              }
                           }
                        }
                     }
                  }
               }
            }
         },
         "responses":{
            "201":{
               "description":""
            },
            "404":{
               "description":"Address not found"
            }
         }
      }

   },
     "/offers":{
      "post":{
         "summary":"Criação de uma oferta vinculada a um hotel",
         "description":"Criação de uma nova oferta",
         "tags":[
            "Ofertas"
         ],
         "requestBody":{
            "required":true,
            "content":{
               "application/json":{
                  "schema":{
                     "type":"object",
                     "properties":{
                        "hotel_id":{
                          "type":"string",
                          "example":"629f9858b99fb9e9e5737017"
                        },
                        "offers":{
                           "type":"array",
                           "items":{
                              "type":"object",
                              "properties":{
                                 "checkInDate":{
                                    "type":"string",
                                    "example":"2022-11-22"
                                 },
                                 "checkOutDate":{
                                    "type":"string",
                                    "example":"2022-11-24"
                                 },
                                 "price":{
                                    "type":"number",
                                    "example":240
                                 },
                                 "available":{
                                    "type":"boolean",
                                    "example":true
                                 }
                              }
                           }
                        }
                     }
                  }
               }
            }
         },
         "responses":{
            "201":{
               "description":"Offer created"
            },
            "404":{
               "description":"Hotel not found"
            }
         }
      }

   },
     "/hotel/{id}":{

      "get":{
         "summary":"Listagem de Hoteis",
         "description":"Listagem de hoteis sem filtro",
         "tags":[
            "Hotel"
         ],
         "parameters":[
          {
             "name":"id",
             "in":"path",
             "type":"string",
             "example":"629f9858b99fb9e9e5737017"
          }
       ],
         "responses":{
            "200":{
               "description":"A Json object Hotel",
               "content":{
                  "application/json":{
                     "schema":{
                        "type":"object",
                         "$ref":"#/components/schemas/Hotel"
                     }
                  }
               }
            },
            "404":{
               "description":"Hotel not found",
               "content":{
                "application/json":{
                  "schema":{
                     "type":"object",
                      "$ref":"#/components/schemas/AppError"

                  }
               }
               }

            }
         }
      }
   }
  },
  "components":{
     "schemas":{
        "Address":{
           "type":"object",
           "properties":{
              "_id":{
                 "type":"string"
              },
              "cityName":{
                 "type":"string"
              },
              "cityCode":{
                 "type":"string"
              },
              "countryName":{
                 "type":"string"
              },
              "createdAt":{
                 "type":"string"
              },
              "updatedAt":{
                 "type":"string"
              },
              "_v":{
                 "type":"number"
              },
              "hotels":{
                 "type":"array",
                 "items":{
                    "type":"string"
                 }
              }
           }
        },
        "Hotel":{
           "type":"object",
           "properties":{
              "_id":{
                 "type":"string"
              },
              "chainCode":{
                 "type":"string"
              },
              "iataCode":{
                 "type":"string"
              },
              "name":{
                 "type":"string"
              },

              "createdAt":{
                 "type":"string"
              },
              "updatedAt":{
                 "type":"string"
              },
              "_v":{
                 "type":"number"
              },
              "offers":{
                 "type":"array",
                 "items":{
                    "type":"string"
                 }
              }
           }
        },
        "AppError":{
           "type":"object",
           "properties":{
             "name":{
                "type":"string",
                "example":"AppError"
             },
              "stack":{
                 "type":"string",
                 "example":"AppError: Address not found..."
              },
              "message":{
                 "type":"string",
                 "example":"Address not found"
              }
           }
        }
     }
  }
}
